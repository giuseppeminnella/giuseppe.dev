---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
{% set posts = collections.posts | take(20) -%}
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
<channel>
  <title>Giuseppe Minnella</title>
  <link>https://giuseppe.dev/</link>
  <description>Builder. Full-stack at heart. Context engineering, AI, and talks.</description>
  {% for post in posts %}
  <item>
    <title>{{ post.data.title }}</title>
    <link>{{ post.url | absoluteUrl('https://giuseppe.dev') }}</link>
    <guid>{{ post.url | absoluteUrl('https://giuseppe.dev') }}</guid>
    <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
    <description><![CDATA[{{ post.templateContent | htmlToAbsoluteUrls('https://giuseppe.dev') | safe }}]]></description>
  </item>
  {% endfor %}
</channel>
</rss>
